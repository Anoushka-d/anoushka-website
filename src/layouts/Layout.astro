---
// This is the "frontmatter" - it's like JavaScript that runs before the HTML
// We're telling Astro what information this component needs
// Astro.props is an object that contains the props passed to this component from the page
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* Simple, clean styles for our website */

			/* Reset browser defaults */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			/* Basic page styling */
			body {
				font-family: Arial, sans-serif;
				line-height: 1.5;
				color: black;
				background-color: var(--color-background);
			}

			/* Keep content centered */
			.container {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 var(--space-large);
			}

			/* Simple header */
			header {
				border-bottom: 1px solid var(--color-border);
				margin-bottom: var(--space-large);
			}

			/* Navigation - prevent layout shift on hover */
			nav {
				padding: var(--space-medium) 0;
			}

			nav ul {
				list-style: none;
				display: flex;
				gap: var(--space-large);
			}

			nav a {
				text-decoration: none;
				color: var(--color-text);
				border-bottom: 1px solid transparent;
				transition: border-color 0.2s ease;
			}

			nav a:hover {
				border-bottom-color: var(--color-text);
			}

			/* Main content */
			main {
				min-height: 60vh;
			}

			/* Simple footer */
			footer {
				border-top: 1px solid var(--color-border);
				text-align: center;
				padding: var(--space-large) 0;
				margin-top: var(--space-xlarge);
				color: var(--color-text-light);
			}
		</style>
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<!-- This is the header that appears on every page -->
		<header>
			<nav class="container">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/blog">Blog</a></li>
				</ul>
			</nav>
		</header>

		<!-- This is where the content from other pages gets inserted -->
		<main class="container">
			<slot />
		</main>

		<!-- This is the footer that appears on every page -->
		<footer>
			<div class="container">
				<p>&copy; 2024 My Website. Built with Astro!</p>
			</div>
		</footer>
	</body>
</html>
