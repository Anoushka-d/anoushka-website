---
// This tells Astro to use our Layout component (the template with header/footer)
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro">
	<!-- Main content of our homepage -->
	<div class="hero">
		<h1>My First Website</h1>
		<p>A simple website built with Astro</p>
		<a href="/about" class="btn">Learn More</a>
	</div>

	<!-- Simple list of features -->
	<div class="features">
		<div class="feature">
			<h2>Simple Design</h2>
			<p>Clean and minimal design that's easy to understand.</p>
		</div>

		<div class="feature">
			<h2>Easy to Edit</h2>
			<p>Change text, colors, and layout with simple code.</p>
		</div>

		<div class="feature">
			<h2>Learn by Doing</h2>
			<p>Every file has helpful comments to guide you.</p>
		</div>
	</div>
</Layout>
<style>
	/* Simple styles for the homepage using CSS variables */
	/* Hero section */
	.hero {
		text-align: center;
		padding: var(--space-xlarge) 0;
	}

	.hero h1 {
		font-size: var(--font-size-xlarge);
		margin-bottom: var(--space-medium);
	}

	.hero p {
		font-size: var(--font-size-large);
		color: var(--color-text-light);
		margin-bottom: var(--space-large);
	}

	/* Features section */
	.features {
		margin: var(--space-xlarge) 0;
	}

	.feature {
		border-bottom: 1px solid var(--color-border);
		padding: var(--space-large) 0;
	}

	.feature:last-child {
		border-bottom: none;
	}

	.feature h2 {
		margin-bottom: var(--space-small);
	}

	/* Simple button */
	.btn {
		display: inline-block;
		background: var(--color-accent);
		color: var(--color-background);
		padding: var(--space-small) var(--space-large);
		text-decoration: none;
	}

	.btn:hover {
		background: var(--color-accent-hover);
	}
</style>
