---
// Import the layout and components
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import ImageCard from "../components/ImageCard.astro";
const name="Anoushka";
---

<MainLayout title="Welcome to My Website">
	<h1>hi can u see my website?</h1>
	<p>A simple website built with Astro</p>

	<!-- Example of using a component with props -->
	<Button text="Click here" />

	<h2>Features</h2>

	<ImageCard link="https://media.istockphoto.com/id/1419410282/photo/silent-forest-in-spring-with-beautiful-bright-sun-rays.jpg?s=612x612&w=0&k=20&c=UHeb1pGOw6ozr6utsenXHhV19vW6oiPIxDqhKCS2Llk=" caption="Anoushka's image"/>

	<!-- Example of using another component with props -->
	<Card title="Simple Design" content="Clean and minimal design that's easy to understand." />
	<Card title="Easy to Edit" content="Change text, colors, and layout with simple code." />
	<Card title="Learn by Doing" content="Every file has helpful comments to guide you." />

	<Button text="Click here" />

</Layout>
